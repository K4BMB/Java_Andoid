<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Información del usuario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Usuario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/tvDetalleUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario - Tipo"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarUsuario"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/primary_blue"
                android:contentDescription="Editar usuario"
                android:icon="@android:drawable/ic_menu_edit"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:cornerRadius="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPassword"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/orange_warning"
                android:contentDescription="Resetear contraseña"
                android:icon="@android:drawable/ic_secure"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:cornerRadius="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminarUsuario"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/red_error"
                android:contentDescription="Eliminar usuario"
                android:icon="@android:drawable/ic_menu_delete"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:cornerRadius="24dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>